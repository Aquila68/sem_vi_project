<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.project.IdleActivity">

    <TextView
        android:id="@+id/tv_amnt_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_amnt_label"
        android:layout_toEndOf="@+id/tv_amnt_label"
        android:gravity="center"
        android:height="50dp" />

    <TextView
        android:id="@+id/tv_amnt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:height="50dp"
        android:gravity="center"
        android:onClick="refresh"
        android:text="Balance remaining in account:" />

    <Button
        android:id="@+id/bt_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        android:onClick="buyButton"
        android:text="Buy ticket" />

    <Button
        android:id="@+id/bt_trans_hist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Transaction History"
        android:onClick="transHistory"/>

    <Button
        android:id="@+id/bt_refresh_amnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_amnt_display"
        android:layout_marginEnd="41dp"
        android:text="Refresh" />
</RelativeLayout>
